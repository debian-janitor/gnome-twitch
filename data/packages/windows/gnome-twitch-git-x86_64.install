post_install() {
  mingw64/bin/glib-compile-schemas /mingw64/share/glib-2.0/schemas
  mingw64/bin/gtk-update-icon-cache -q -t -f /mingw64/share/icons/hicolor
}

post_upgrade() {
  post_install $1
}

post_remove() {
  post_install $1
}